            if (!menu || !overlay) return;
            
            const isOpening = menu.classList.contains('menu-open');
            
            if (!isOpening) {
                menu.classList.add('menu-open');
                overlay.classList.remove('hidden');
                document.body.style.overflow = 'hidden';
