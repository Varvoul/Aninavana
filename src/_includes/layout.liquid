            loadData: function() {
                if (this.isLoaded) return;
                
                // Try to load from API or use sample data
                console.log("Loading search data...");
                
                // For now, use sample data
                this.liteData = this.sampleData;
                this.isLoaded = true;
                console.log(`Loaded ${this.liteData.length} search items`);
            },
            
            search: function(query, limit = 5) {
                query = query.toLowerCase().trim();
                if (!query || query.length < 2) return [];
                
                this.loadData();
                
                const results = this.liteData.filter(item => 
                    item.searchLower.includes(query)
                ).sort((a, b) => {
                    // Prioritize exact matches
                    const aExact = a.title.toLowerCase() === query;
                    const bExact = b.title.toLowerCase() === query;
                    if (aExact && !bExact) return -1;
                    if (!aExact && bExact) return 1;
                    
                    // Then title starts with query
                    const aStarts = a.title.toLowerCase().startsWith(query);
                    const bStarts = b.title.toLowerCase().startsWith(query);
                    if (aStarts && !bStarts) return -1;
                    if (!aStarts && bStarts) return 1;
                    
                    return 0;
                }).slice(0, limit);
                
                return results;
            }
        };
        
        // ============================================
        // SEARCH INTERFACE
        // ============================================
        class SearchInterface {
            constructor(type) {
                this.type = type;
                this.input = document.getElementById(`${type}-search-input`);
                this.resultsList = document.getElementById(`${type}-search-results-list`);
                this.resultsContainer = document.getElementById(`${type}-search-results`);
                this.viewAllButton = document.getElementById(`${type}-view-all-results`);
                
                if (!this.input || !this.resultsList || !this.resultsContainer || !this.viewAllButton) {
                    console.warn(`Search interface ${type} not fully initialized`);
                    return;
                }
                
                this.init();
            }
            
            init() {
                // Debounced input handler
                this.input.addEventListener('input', this.debounce((e) => {
                    this.handleInput(e.target.value);
                }, 300));
                
                // Enter key
                this.input.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        this.handleEnter(this.input.value);
                    }
                });
                
                // Focus
                this.input.addEventListener('focus', () => {
                    if (this.input.value.trim()) {
                        this.handleInput(this.input.value);
                    }
                });
                
                // View all button
                this.viewAllButton.addEventListener('click', () => {
                    this.handleEnter(this.input.value);
                });
                
                // Close on outside click
                document.addEventListener('click', (e) => {
                    const container = this.type === 'desktop' ? 
                        document.querySelector('.search-container') : 
                        document.querySelector('.mobile-search-container');
                    
                    if (container && !container.contains(e.target)) {
                        this.resultsContainer.classList.add('hidden');
                    }
                });
            }
            
            debounce(func, wait) {
                let timeout;
                return (...args) => {
                    clearTimeout(timeout);
                    timeout = setTimeout(() => func.apply(this, args), wait);
                };
            }
            
            handleInput(query) {
                query = query.trim();
                
                if (!query || query.length < 1) {
                    this.resultsContainer.classList.add('hidden');
                    return;
                }
                
                this.showLoading();
                
                const results = SearchManager.search(query, 5);
                this.displayResults(results, query);
            }
            
            handleEnter(query) {
                query = query.trim();
                if (query) {
                    window.location.href = `/search/?q=${encodeURIComponent(query)}`;
                }
            }
            
            showLoading() {
                this.resultsList.innerHTML = `
                    <div class="p-4 text-center">
                        <div class="inline-block animate-spin rounded-full h-6 w-6 border-t-2 border-b-2 border-primary"></div>
                        <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">Searching...</p>
                    </div>
                `;
                this.resultsContainer.classList.remove('hidden');
            }
            
            displayResults(results, query) {
                if (results.length > 0) {
                    let html = '';
                    results.forEach(item => {
                        const typeClass = this.getTypeClass(item.type);
                        const genre = item.genres && item.genres.length > 0 ? item.genres[0] : '';
                        
                        html += `
                            <a href="${item.url}" class="flex gap-3 p-3 hover:bg-gray-100 dark:hover:bg-gray-800 cursor-pointer transition-colors border-b border-gray-100 dark:border-gray-800 last:border-0 group/item">
                                <img src="${item.posterUrl}" alt="${item.title}" 
                                     class="w-10 h-14 object-cover rounded shadow-sm flex-shrink-0"
                                     loading="lazy"
                                     onerror="this.src='data:image/svg+xml;base64,'">
                                <div class="flex flex-col justify-center flex-1 min-w-0">
                                    <h4 class="text-sm font-semibold text-gray-900 dark:text-white truncate group-hover/item:text-primary mb-1">
                                        ${this.highlightText(item.title, query)}
                                    </h4>
                                    <div class="text-xs text-gray-500 dark:text-gray-400 flex items-center gap-2">
                                        <span>${item.airedYear || ''}</span>
                                        <span class="w-1 h-1 bg-gray-400 rounded-full"></span>
                                        <span class="px-1 py-0.5 ${typeClass} text-white text-[10px] rounded">${item.type || 'Show'}</span>
                                        ${genre ? `<span class="w-1 h-1 bg-gray-400 rounded-full"></span><span class="truncate">${genre}</span>` : ''}
                                    </div>
                                </div>
                            </a>
                        `;
                    });
                    
                    this.resultsList.innerHTML = html;
                    this.viewAllButton.textContent = `View all results (${results.length})`;
                    this.resultsContainer.classList.remove('hidden');
                } else {
                    this.resultsList.innerHTML = `
                        <div class="p-4 text-center text-sm text-gray-500 dark:text-gray-400">
                            No results found for "${query}"
                            <p class="text-xs mt-1">Try different keywords</p>
                        </div>
                    `;
                    this.resultsContainer.classList.remove('hidden');
                }
            }
            
            getTypeClass(type) {
                switch((type || '').toLowerCase()) {
                    case 'anime': return 'bg-purple-500';
                    case 'movie': return 'bg-blue-500';
                    case 'tv show': return 'bg-green-500';
                    case 'series': return 'bg-green-500';
                    default: return 'bg-gray-500';
                }
            }
            
            highlightText(text, query) {
                if (!query || !text) return text;
                const regex = new RegExp(`(${query.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
                return text.replace(regex, '<span class="text-primary font-bold">$1</span>');
            }
        }
        
